@section scripts {
    <script>
        function Gonder() {
            var email = document.getElementById('email').value;
            var mesaj = document.getElementById('message').value;
            if (email == "") {

                var hata = '<div id="alert" class="alert alert-danger"><span>Email adresinizi giriniz.</span></div>';
                document.getElementById('alert').innerHTML = hata;
            }

            else if (mesaj== "") {
                var hata = '<div id="alert" class="alert alert-danger"><span>Mesaj alanını boş geçmeyiniz.</span></div>';
                document.getElementById('alert').innerHTML = hata;
            }
            else {
                var success = '<div id="alert" class="alert alert-success"><span>Bize mesaj gönderdiğiniz için teşekkür ederiz.</span></div>';
                document.getElementById('alert').innerHTML = success;
            }
           
        }
        
    </script>
