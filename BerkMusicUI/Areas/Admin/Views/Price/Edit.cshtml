
@model Price
@{
    ViewData["Title"] = "Kimlik Bilgisi Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
               
                    <form role="form" asp-action="Edit" asp-controller="Price" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <label>Fiyat Başlığı</label>
                            <input asp-for="Title" type="text" class="form-control" placeholder="Başlık Giriniz">
                            <div class="form-group">
                                <label>Fiyat</label>
                                <input asp-for="SinglePrice" type="text" class="form-control" placeholder="Fiyat Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input asp-for="Description1" type="text" class="form-control" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input asp-for="Description2" type="text" class="form-control" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input asp-for="Description3" type="text" class="form-control" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input asp-for="Description4" type="text" class="form-control" placeholder="Açıklama Giriniz">
                            </div>

                            <div class="form-group">
                                <label>Resim Ekle</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="image" />
                                        <label class="custom-file-label">Fotoğraf Ekle</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>

                </div>

                <!-- /.box-body -->


            </div>
        </div>
    </div>
</div>

<!-- /.box -->
<!-- Form Element sizes -->

@section scripts{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>

}
