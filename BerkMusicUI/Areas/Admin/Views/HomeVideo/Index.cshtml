@model IEnumerable<HomePageVideo>
@{
    ViewData["Title"] = "Anasayfa Video Düzenlemeleri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header">
        <a asp-action="Create" asp-controller="HomeVideo" class="btn btn-success float-right">Video Ekle</a>
    </div>
    <div class="card-body">
        <table id="usertable" class="table table-striped">
            <thead>
                <tr>

                    <th>Video Linki (src URL)</th>

                    <th></th>

                </tr>
            </thead>


            <tbody>
                @foreach (var p in Model)
                {
                    <tr>

                        <td>@p.VideoPath</td>
                        <td>

                            <a asp-action="Delete" asp-controller="HomeVideo" asp-route-id="@p.ID" class=" btn btn-sm btn-danger">Sil</a>
                        </td>

                    </tr>
                }
            </tbody>



        </table>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#usertable').DataTable();
        });
    </script>


}


