@model Referance
@{
    ViewData["Title"] = "Referans Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" asp-action="Create" asp-controller="Referance" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Metin</label>
                                <input asp-for="Text" type="text" class="form-control" placeholder="Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Link(URL)</label>
                                <input asp-for="Link" type="text" class="form-control" style=" height:50px" placeholder="URL Giriniz" />
                            </div>


                            <div class="form-group">
                                <label>Resim Ekle</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="image" />
                                        <label class="custom-file-label">Fotoğraf Ekle</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
                <!-- Form Element sizes -->


            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
    $(document).ready(function () {
        bsCustomFileInput.init();
    });
    </script>

    }
