
@model Identity
@{
    ViewData["Title"] = "Kimlik Bilgisi Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="container">
                        <div class="row">
                            @if (Model.ImagePath == "noimage.jpg")
                            {
                                <img class="img-fluid" style="width:250px; height:300px" src="~/images/noimage.jpg" />
                            }
                            else
                            {
                                <img class="img-fluid" style="width:250px; height:300px" src="~/images/@Model.ImagePath" />

                            }
                        </div>
                    </div>
                    <form role="form" asp-action="Edit" asp-controller="Identity" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <label>Ad Soyad</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Başlık Giriniz">
                            <div class="form-group">
                                <label>Özellik Ekle (Bold)</label>
                                <input asp-for="Specifications1" type="text" class="form-control" placeholder="Özellik Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Özellik Ekle</label>
                                <input asp-for="Specifications2" type="text" class="form-control" placeholder="Özellik Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Özellik Ekle</label>
                                <input asp-for="Specifications3" type="text" class="form-control" placeholder="Özellik Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Özellik Ekle</label>
                                <input asp-for="Specifications4" type="text" class="form-control" placeholder="Özellik Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Amaç Ekle</label>
                                <textarea asp-for="Objective" type="text" class="form-control" style="width: 100%; height: 300px" placeholder="Makale"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Resim Ekle</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input asp-for="ImagePath" type="file" class="custom-file-input" name="image" id="customeFileLang"  />
                                        <label class="custom-file-label" for="customfileLang">@Model.ImagePath</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
                       
                </div>

                <!-- /.box-body -->

                
            </div>
        </div>
    </div>
</div> 
              
<!-- /.box -->
<!-- Form Element sizes -->
           
@section scripts{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>

}