@model Layout
@{
    ViewData["Title"] = "Anasayfa Postu Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="container">
                        <div class="row">
                            @if (Model.ImagePath == "noimage.jpg")
                            {
                                <img class="img-fluid" style="width:250px; height:300px;" src="~/images/noimage.jpg" />
                            }
                            else
                            {
                                <img class="img-fluid" style="width:250px; height:300px;" src="~/images/@Model.ImagePath" />

                            }
                        </div>
                    </div>
                    <form role="form" asp-action="Edit" asp-controller="Layout" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input asp-for="Title" type="text" class="form-control" placeholder="Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Konu</label>
                                <textarea asp-for="Description" type="text" class="form-control" placeholder="Konu" style="width:100%; height:300px"></textarea>
                            </div>


                            <div class="form-group">
                                <label>Resim Ekle</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input asp-for="ImagePath" type="file" class="custom-file-input" name="image" />
                                        <label class="custom-file-label">@Model.ImagePath</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
                <!-- Form Element sizes -->


            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
    $(document).ready(function () {
        bsCustomFileInput.init();
    });
    </script>

}

