@model Layout
@{
    ViewData["Title"] = "Anasayfa Postu Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
    <div class="card">
        <div class="card-body">
            <form asp-action="Delete" asp-controller="Layout" method="post">
                <p>
                    @Model.Title isimli bölümü silmek istediğinizden emin misiniz?
                </p>
                <button class="btn btn-danger">Evet</button>
                <a asp-action="Index" asp-controller="Layout" class="btn">İptal</a>
            </form>
        </div>
    </div>
