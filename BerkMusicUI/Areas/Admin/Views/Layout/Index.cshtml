@model IEnumerable<Layout>
@{
    ViewData["Title"] = "Anasayfa Postu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <a asp-action="Create" asp-controller="Layout" class="btn btn-success float-right">Anasayfa Post Ekle</a>
    </div>
    <div class="card-body">
        <table id="usertable" class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Başlık</th>
                    <th>Açıklama </th>

                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>

                </tr>
            </thead>
           
            <tbody>
                @foreach (var p in Model)
                {

                    <tr>
                        <td><img src="~/images/@p.ImagePath" style="width:50px; height:50px" /></td>
                        <td>@p.Title</td>

                        <td style="display:-webkit-box; -webkit-line-clamp:2;-webkit-box-orient: vertical; overflow:hidden">@p.Description</td>

                        <td>
                            <a asp-action="Edit" asp-controller="Layout" asp-route-id="@p.ID" class="btn btn-sm btn-warning">Düzenle</a>




                        </td>
                        <td>
                            <a asp-action="CreateFullLayout" asp-controller="Layout" asp-route-id="@p.ID" class=" btn btn-sm btn-primary">Yeni Sayfa Oluştur</a>
                        </td>
                        <td>
                            <a asp-action="FullLayout" asp-controller="Layout" asp-route-id="@p.ID">Sayfayı Görüntüle</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-controller="Layout" asp-route-id="@p.ID" class=" btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
                </tbody>

            

        </table>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#usertable').DataTable();
        });
    </script>


}