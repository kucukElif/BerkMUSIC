@model IEnumerable<Layout>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="card">
        <div class="card-header">
            <a asp-action="Create" asp-controller="Layout" class="btn btn-success float-right">Slider Ekle</a>
        </div>
        <div class="card-body">
            <table id="producttable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Açıklama </th>

                        <th></th>

                    </tr>
                </thead>
                @foreach (var p in Model)
                {

                    <tbody>
                        <tr>
                            <td><img src="~/images/@p.ImagePath" style="width:50px; height:50px" /></td>
                            <td>@p.Title</td>

                            <td style="display:-webkit-box; -webkit-line-clamp:2;-webkit-box-orient: vertical; overflow:hidden">@p.Description</td>

                            <td>
                                <a asp-action="Edit" asp-controller="Layout" asp-route-id="@p.ID" class="btn btn-sm btn-warning">Düzenle</a>

                                <a asp-action="Delete" asp-controller="Layout" asp-route-id="@p.ID" class=" btn btn-sm btn-danger">Sil</a>

                                <a asp-action="FullLayout" asp-controller="Layout" asp-route-id="@p.ID" class=" btn btn-sm btn-primary">Sayfayı Görüntüle</a>

                                <a asp-action="CreateFullLayout" asp-controller="Layout" asp-route-id="@p.ID">Yeni Sayfa Oluştur</a>
                            </td>

                        </tr>
                    </tbody>

                }

            </table>
        </div>
    </div>
