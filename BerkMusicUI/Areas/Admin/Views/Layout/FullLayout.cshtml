@model LayoutVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
        <table id="producttable" class="table table-striped">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Açıklama </th>

                    <th></th>

                </tr>
            </thead>
           


            <tbody>

                
                    <tr>
                       

                        @foreach (var item in Model.FullLayouts)
                        {
                            @if (item.LayoutDetails.LayoutID == Model.Layout.ID  )
                            {
                                <td><img src="~/images/@item.ImagePath" style="width:50px; height:50px" /></td>
                                <td>@item.Title</td>

                                <td style="display:-webkit-box; -webkit-line-clamp:2;-webkit-box-orient: vertical; overflow:hidden">@item.Description</td>

                                <td>
                                    <a asp-action="EditFullLayout" asp-controller="Layout" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a>

                                    <a asp-action="DeleteFullLayout" asp-controller="Layout" asp-route-id="@item.ID" class=" btn btn-sm btn-danger">Sil</a>
                                </td>
                            }
                        }









                    </tr>
                
                </tbody>

            

        </table>
    </div>
</div>
