@model Video
@{
    ViewData["Title"] = "Video Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-body">
        <form asp-action="Delete" asp-controller="Video" method="post">
            <p>
                @Model.Title silmek istediğinizden emin misiniz?
            </p>
            <button class="btn btn-danger">Evet</button>
            <a asp-action="Index" asp-controller="Video" class="btn">İptal</a>
        </form>
    </div>
</div>
