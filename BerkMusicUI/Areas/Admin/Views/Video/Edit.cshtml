@model Video
@{
    ViewData["Title"] = "Video Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="container">
                        <div class="row">
                            @if (Model.VideoPath == "novideo.png")
                            {
                                <img class="img-fluid" style="width: 700px; height: 300px;" src="~/images/novideo.png" />
                            }
                            else
                            {
                                <iframe width="700" height="300" src="@Model.VideoPath" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

                            }
                        </div>
                    </div>
                    <form role="form" asp-action="Edit" asp-controller="Video" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input asp-for="Title" type="text" class="form-control" placeholder="Metin Giriniz">
                            </div>

                            <div class="form-group">
                                <textarea asp-for="Explanation" type="text" class="form-control" placeholder="Konu" style="width:100%; height:300px" maxlength="259" id="textarea"></textarea>
                                <div class="red-colored" style="color:red;font-weight:bold "><span id="rchars">259</span> karakter kaldı.</div>
                            </div>
                            <div class="form-group">
                                <label>src Link(URL)</label>
                                <input asp-for="VideoPath" type="text" class="form-control" placeholder="URL Giriniz">
                            </div>

                        </div>

                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
                <!-- Form Element sizes -->


            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
    <script>
    var maxLength = 259;
        $('textarea').keyup(function () {
            var textlen = maxLength - $(this).val().length;
            $('#rchars').text(textlen);
        });</script>
