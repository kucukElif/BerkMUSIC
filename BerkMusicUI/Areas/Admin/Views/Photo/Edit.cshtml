
@model Photo
@{
    ViewData["Title"] = "Fotoğraf Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="container">
                        <div class="row">
                            @if (Model.ImagePath == "noimage.jpg")
                            {
                                <img class="img-fluid" style="width:250px; height:auto;" src="~/images/noimage.jpg" />
                            }
                            else
                            {
                                <img class="img-fluid" style="width:250px; height:auto;" src="~/images/@Model.ImagePath" />

                            }
                        </div>
                    </div>
                    <form role="form" asp-action="Edit" asp-controller="Photo" method="post" enctype="multipart/form-data">
                      

                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
                <!-- Form Element sizes -->


            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
    $(document).ready(function () {
        bsCustomFileInput.init();
    });
    </script>

}