<!-- Features Section -->
@foreach (var item in Model.Identities)
{
   
        <div class="container" style="color:wheat; margin-top:150px; background-color:#171515">
            <div class="row" style="background-color: rgba(0,0,0,0.3); border-color: transparent">
                <div class="col-lg-4" style="color:wheat">
                    <h2>@item.Name</h2>
                    <p>ElBerk Müzik Stüdyoları:</p>
                    <div class="identitysec">
                        <ul style=" list-style-type: none">
                            <li>
                                <strong>@item.Specifications1</strong>
                            </li>
                            <li>@item.Specifications2</li>
                            <li>@item.Specifications3</li>
                            <li>@item.Specifications4</li>
                        </ul>

                    </div>

                    <p>@item.Objective</p>
                </div>
                    <div class="col-lg-8" style="float:left; margin-top:10px">
                        <img style=" width:200px;height:200px; margin-left:50px" src="~/images/@item.ImagePath" />
                    </div>


        </div>
    </div>
}

