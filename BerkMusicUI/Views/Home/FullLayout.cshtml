@model FullLayoutVM
@{
    ViewData["Title"] = "Record";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <div class="row align-items-center my-5">
            @foreach (var item in Model.FullLayouts)
            {
                @if (item.LayoutDetails.LayoutID == Model.Layout.ID)
                {

                    <!-- /.col-lg-8 -->
                    <div class="col-lg-6">





                        <section class="py-5">
                            <div class="container">
                                <h1 style="color:white">@item.Title</h1>
                                <br />

                                <p style="color:wheat">@item.Description</p>
                            </div>
                        </section>



                    </div>

                    <div class="col-lg-6">
                        <img class="card-img-top" src="~/images/@item.ImagePath" alt="" style="height:600px">
                    </div>
                }

            }
        </div>
    </div>
        <br />
        <br />
